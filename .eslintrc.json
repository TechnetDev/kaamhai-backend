{
    "parser": "@babel/eslint-parser",
    "env": {
      "es6": true,
      "node": true
    },
    "extends": ["prettier"],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "rules": {
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "version": ">=13.0.0",
          "ignores": ["modules"]
        }
      ]
    },
    "ecmaFeatures": {
      "modules": true,
      "spread": true,
      "restParams": true
    },
    "plugins": ["prettier"]
  }
  